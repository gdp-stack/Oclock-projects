<!doctype html>
<html lang="fr" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <meta name="author" content="Guillaume de Place" />
    <meta name="publisher" content="@GDP-Corp" />
    <meta
      name="description"
      content="Projet de création d'un site vitrine de produits caféinés responsables, issus du commerce équitable et durable"
    />
    <meta
      name="keywords"
      contextmenu="Coffee Café cafe latte macha Grain Brésil Guatemal Nicaragua Corse Espresso Arabica Robusta Moka Livraison Ecologique RSE Responsable commerce équitable durable"
    />
    <title>oCoffee - Distribution de cafés</title>
    <link rel="stylesheet" href="/css/base/reset.css" />
    <link rel="stylesheet" href="/css/base/header.css" />
    <link rel="stylesheet" href="/css/base/footer.css" />
    <link rel="stylesheet" href="/css/base/base.css" />
    <!-- <link rel="stylesheet" href="/css/base/typology.css" />
    <link rel="stylesheet" href="/css/base/variables.css" /> -->
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/connection.css" />
    <link rel="stylesheet" href="/css/catalog.css" />
    <link rel="stylesheet" href="/css/article.css" />
    <link rel="stylesheet" href="/css/about.css" />
    <link rel="stylesheet" href="/css/contact.css" />
    <link rel="stylesheet" href="/css/shop.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />

    <script defer src="/js/header.js"></script>
  </head>
  <body>
    <header>
      <nav>
        <img
          src="/assets/images-customer/logo.svg"
          class="logo"
          aria-label="oCoffee Logo"
        />
        <ul class="nav-computer-responsive">
          <li><a href="/">Accueil</a></li>
          <li><a href="/catalogue">Catalogue</a></li>
          <li><a href="/panier">Panier</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/a-propos">A propos</a></li>
          <% if (currentSession.login && currentSession.role === "admin"){%>
            <li><a href="/admin">Admin</a></li>
          <% } %>
        </ul>
        <a
          href="<% if (!currentSession.login){%>/connexion<%} else {}%>"
          class="connection-button"
          ><% if (!currentSession.login){%>Connexion<%} else {%> <%= currentSession.login[0].toUpperCase() %> <%}%></a
        >
        <div class="nav-mobile-responsive">
          <button onclick="toggleMenuVisibility()">☰</button>
          <ul class="nav-menu-mobile-responsive">
            <li><a href="/">Accueil</a></li>
            <li><a href="/catalogue">Catalogue</a></li>
            <li><a href="/panier">Panier</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/a-propos">A propos</a></li>
            <% if (currentSession.login && currentSession.role === "admin"){%>
              <li><a href="/admin">Admin</a></li>
            <% } %>
          </ul>
        </div>
      </nav>
    </header>
  </body>
</html>
